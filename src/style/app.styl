body,
html
  height 100%
  margin 0
  padding 0
  overflow hidden

#sidebar
  width 150px
  height 100vh
  background #BEBEBE
  text-align center
  font-size 3rem

  a
    color #fff

    &:active
      color #333

  #btn
    width 150px
    height 150px
    line-height 100px
 
.container
  position absolute
  top 0
  left 150px

#home
  #home-content
    width calc(100vw - 135px)
    height 100vh
    background #FFD2D2
    position absolute
    top 0
    left 150px

    #white
      width 500px
      height 500px
      background #fff
      border-radius 50%
      text-align center
      // line-height 350px
      position absolute
      top 50%
      left 15%
      transform translateY(-50%)

      .btn
        width 350px
        height 350px
        font-size 10rem
        color #FFD2D2
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)

        &:hover
          color #BEBEBE
      
      p
        font-size 3.5rem
        color #6C6C6C	
        position absolute
        bottom 5%
        left 50%
        transform translateX(-50%)

    #bottom
      width 500px
      height 100px
      text-align center
      position absolute
      top 80%
      left 15%

      .btn
        font-size 5rem
        line-height 5rem
        color #fff
        background rgba(0, 0, 0, 0)
        border none

        &:hover
          color #BEBEBE
    
    #text
      width 500px
      height 80px
      font-size 3.5rem
      font-weight 500
      line-height 80px
      color #6C6C6C
      border-bottom 2px solid #6C6C6C
      position absolute
      top 50%
      right 20%
      transform translateY(-50%)

      :before
        content ''
        width 40px
        height 40px
        background #fff
        border-radius 50%
        position absolute
        top 50%
        right 10px
        transform translateY(-50%)

#list
  #list-content
    width calc(100vw - 135px)
    height 100vh
    background #fff
    padding 50px 100px
    position absolute
    top 0
    left 150px

    .button
      position absolute
      top 30px
      left 400px

  #todo-item
    font-size 20px
    position relative

    &:before
      content ''
      width 20px
      height 20px
      border 1px solid #BEBEBE
      border-radius 50%
      position absolute
      top 50%
      left -30px
      transform translateY(-50%)
  
  #done-item
    font-size 20px
    position relative

    &:before
      content ''
      width 20px
      height 20px
      border 1px solid #BEBEBE
      border-radius 50%
      background #FFD2D2
      position absolute
      top 50%
      left -30px
      transform translateY(-50%)
  
    #divider
      width 2px
      height 70%
      background #BEBEBE
      position absolute
      top 250px
      left 900px

#settings
  #settings-content
    width calc(100vw - 135px)
    height 100vh
    background #fff
    position absolute
    top 0
    left 150px
    padding 100px 150px
